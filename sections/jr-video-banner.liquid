<section class="outter hero-video">
  <section class="video-container">
      <video
        src="{{ section.settings.video_url }}"
        autoplay
        loop
        playsinline
        muted
      ></video>
      <div class="callout">
        <h1>
          {{ section.settings.heading }}
        </h1>
        <p>{{ section.settings.text }}</p>
        <a class="button button--primary" target="_blank" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
      </div>
  </section>
  {% if section.settings.abs_pos_image %}
    {{ section.settings.abs_pos_image | image_url: width: 1000 | image_tag: class:"abs-image" }}
  {% endif %}
</section>

<style>
   /* Hero Video */
 .outter.hero-video {
	 width: 100%;
	 height: 100%;
	 display: flex;
	 flex-direction: column;
	 justify-content: center;
     position: relative;
}
 @media (max-width: 767px) {
	 .outter.hero-video {
		 height: 375px;
	}
}
 .hero-video .video-container {
	 height: 550px;
	 width: 100%;
	 position: relative;
	 overflow: hidden;
}
 @media (max-width: 767px) {
	 .hero-video .video-container {
		 height: 375px;
	}
}
 .hero-video video {
	 object-fit: cover;
	 position: absolute;
	 height: 550px;
	 width: 100%;
	 top: 0;
	 left: 0;
}
 @media (max-width: 767px) {
	.hero-video video {
		height: 375px;
	}
}
 .hero-video .video-container:after {
	 content: '';
	 display: block;
	 height: 100%;
	 width: 100%;
	 position: absolute;
	 top: 0;
	 left: 0;
	 background: rgba(0, 0, 0, .55);
	 z-index: 1;
}
 .hero-video h1 {
	 text-transform: uppercase;
	 margin: 1rem 0 1rem;
	 padding: 0;
	 line-height: 1.2;
	 color: white;
}
   .hero-video P {
	 margin: 0 0 1rem;
	 padding: 0;
	 line-height: 1.4;
	 color: white;
     font-size: 16px;
}
 @media (max-width: 767px) {
	 .hero-video h1 {
		 font-size: 32px;
	}
}
 @media (min-width: 768px) {
	 .hero-video h1 {
		 font-size: 52px;
	}
}
 .hero-video .desc {
	 color: white;
	 font-weight: 400;
	 font-size: 18px;
}
 .hero-video .callout {
	 position: relative;
	 display: flex;
	 justify-content: center;
	 align-items: center;
	 flex-direction: column;
	 height: 100%;
	 text-align: center;
	 position: relative;
	 z-index: 2;
	 width: 70%;
	 margin: auto;
}
 @media (max-width: 767px) {
	.hero-video .callout {
		width: 90%;
	}
}
 .hero-video .button {
    margin-top: 1rem;
}


.hero-video .abs-image {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    width: 20%;
    min-width: 100px;
    max-width: 150px;
    height: auto;
    z-index: 2;
}

@media screen and (max-width: 767px) {
	 .hero-video .button {
		 padding: 10px 20px;
	}
    .hero-video .abs-image {
        bottom: 1rem;
        right: 1rem;
    }
}
 
</style>
{% schema %}
{
  "name": "Custom Video Banner",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "text",
      "default": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
        "type": "image_picker",
        "id": "abs_pos_image",
        "label": "Image for absolute position"
    }
  ],
  "presets": [
    {
      "name": "Custom Video Banner"
    }
  ]
}
{% endschema %}